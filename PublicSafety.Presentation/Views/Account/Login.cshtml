
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-100" dir="ltr">
    <div class="container-fluid h-custom" style="background-color: #333333; color: #ffffff;">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <!-- Logo Image -->
            <div class="col-md-9 col-lg-6 col-xl-5 text-center">
                <img src="~/Assets/images/logo.png"
                     class="img-fluid" alt="Logo" style="max-width: 100%; height: auto; margin-bottom: 20px;">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1" style="background-color: #8A8B94; border-radius:8px; padding-bottom:10px; padding-top:10px;">
                <form name="loginForm" method="post" action="@Url.Action("Login", "Account")">

                    <div class="form-outline mb-4">
                        @Html.Label("اسم المستخدم", new { @class = "form-label", @style = "color: #ffffff;" })
                        <input type="text" class="form-control full-width-input" name="Username" placeholder="Username" required
                               style="background-color: #444444; color: #ffffff; border: none;" />

                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3 position-relative">
                        @Html.Label("كلمة المرور", new { @class = "form-label", @style = "color: #ffffff;" })
                        <div class="input-group">
                            <input type="password" class="form-control full-width-input" name="Password" placeholder="Password" required
                                   style="background-color: #444444; color: #ffffff; border: none;" />
                            
                        </div>
                        @if (ViewBag.LoginError != null)
                        {
                            <div class="alert alert-danger mt-2">@ViewBag.LoginError</div>
                        }
                    </div>

                    <!-- Submit button -->
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem; background-color: #BE9F57; border: none;">
                            تسجيل الدخول
                        </button>
                    </div>


                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="d-flex flex-column flex-md-row text-center text-md-start py-4 px-4 px-xl-5 bg-primary"
         style="position: fixed; width: 100%; bottom: 0; left: 0; justify-content: space-between; background-color: #BE9F57 !important; align-items: center; ">
        <div class="text-white mb-3 mb-md-0">
            Copyright © 2024 <span><b>JODBB</b></span>. All rights reserved.
        </div>

    </div>
</section>




<style>
    body {
        background-color: #333333;
    }

    header {
        display: none;
    }

    .form-control {
        border-radius: 0.25rem;
    }

    .input-group-text {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.375rem 0.75rem;
        border: none;
    }

    @@media (max-width: 768px) {
        .input-group-text {
            font-size: 14px;
        }
    }
</style>
